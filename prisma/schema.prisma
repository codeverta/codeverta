// prisma/schema.prisma
datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// Definisikan model untuk Article
model Article {
  id               Int      @id @default(autoincrement())
  
  title            String   @db.VarChar(255)
  slug             String   @unique 
  content          String   @db.Text
  
  // Kolom Metadata (SEO & Sosial Media)
  metaTitle        String?  @db.VarChar(255) // Judul khusus untuk meta tag (jika berbeda dari title utama)
  metaDescription  String?  @db.VarChar(500) // Deskripsi untuk meta tag
  metaKeywords     String?  @db.VarChar(500) // Kata kunci (walaupun kurang relevan untuk SEO modern)
  ogImageURL       String?  @db.VarChar(255) // URL gambar untuk Open Graph (saat dibagikan ke sosial media)
  
  // Kolom Pengelolaan Konten
  language         String   @default("id") @db.VarChar(10) // Bahasa artikel (misalnya: "id", "en")
  authorId         Int? // Opsional: Untuk menghubungkan ke tabel user/author (Foreign Key)
  
  // Kolom Timestamp
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  // Unique dan Index
  @@index([title])
}